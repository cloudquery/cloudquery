{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/cloudquery/cloudquery/plugins/destination/sqlite/client/spec",
  "$ref": "#/$defs/Spec",
  "$defs": {
    "Spec": {
      "properties": {
        "connection_string": {
          "type": "string",
          "minLength": 1,
          "description": "Path to a file, such as `./mydb.sql`",
          "x-cq-fs": true
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "connection_string"
      ]
    }
  }
}
