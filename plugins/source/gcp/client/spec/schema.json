{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/Spec",
  "$defs": {
    "Spec": {
      "type": "object",
      "properties": {
        "project_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "folder_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^(folders|organizations)/(.)+$"
          }
        },
        "organization_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "project_filter": {
          "type": "string"
        },
        "organization_filter": {
          "type": "string"
        },
        "folder_recursion_depth": {
          "type": "integer",
          "minimum": 0,
          "default": 100
        },
        "service_account_key_json": {
          "type": "string"
        },
        "backoff_delay": {
          "type": "integer",
          "minimum": 0,
          "default": 30
        },
        "backoff_retries": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "discovery_concurrency": {
          "type": "integer",
          "minimum": 1,
          "default": 100
        },
        "enabled_services_only": {
          "type": "boolean"
        },
        "concurrency": {
          "type": "integer",
          "minimum": 1,
          "default": 50000
        },
        "scheduler": {
          "type": "string",
          "enum": [
            "dfs",
            "round-robin",
            "shuffle"
          ],
          "default": "dfs"
        },
        "service_account_impersonation": {
          "$ref": "#/$defs/CredentialsConfig"
        }
      },
      "not": {
        "required": [
          "project_filter",
          "folder_ids"
        ]
      },
      "additionalProperties": false
    },
    "CredentialsConfig": {
      "type": "object",
      "properties": {
        "target_principal": {
          "type": "string",
          "format": "email"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^https://www.googleapis.com/auth/(.)+$"
          },
          "default": [
            "https://www.googleapis.com/auth/cloud-platform"
          ]
        },
        "delegates": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "email"
          }
        },
        "subject": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false,
      "required": [
        "target_principal"
      ]
    }
  }
}
