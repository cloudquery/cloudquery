# Test unit
.PHONY: test
test:
	go test -timeout 3m ./...

# Install tools
.PHONY: install-tools
install-tools:
	@echo Installing tools from tools/tool.go
	@cat tools/tool.go | grep _ | awk -F'"' '{print $$2}' | xargs -tI % go install %

# Install pre-commit hooks. This requires pre-commit to be installed (https://pre-commit.com/)
.PHONY: install-hooks
install-hooks:
	pre-commit install

.PHONY: lint
lint:
	golangci-lint run --config ../../.golangci.yml
	
.PHONY: gen-mocks
gen-mocks:
	go install github.com/golang/mock/mockgen@v1.6.0
	grep -rl '// Code generated by codegen; DO NOT EDIT.' ./client/services/* | xargs rm
	go run codegen/main.go
	grep -rl '// Code generated by MockGen. DO NOT EDIT.' ./client/mocks/* | xargs rm
	go generate ./client/...

.PHONY: gen-docs
gen-docs:
	rm -rf ../../../website/tables/alicloud
	go run main.go doc ../../../website/tables/alicloud
	cp ../../../website/tables/alicloud/README.md ./docs/tables/README.md
	sed -i.bak -e 's_(\(.*\).md)_(tables/\1)_' ../../../website/tables/alicloud/README.md
	mv ../../../website/tables/alicloud/README.md ../../../website/pages/docs/plugins/sources/alicloud/tables.md
	sed -i.bak -e 's_(\(.*\).md)_(\1)_' ../../../website/tables/alicloud/*.md
	rm -rf ../../../website/tables/alicloud/*.bak

.PHONY: build
build:
	go build -o cloudquery-alicloud main.go

.PHONY: run
run:
	cloudquery sync ./config/alicloud.yaml

.PHONY: clean
clean:
	rm -fr cloudquery.log cq_csv_output

# All gen targets
.PHONY: gen
gen: gen-mocks gen-docs
