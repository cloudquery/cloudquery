# Unit tests
.PHONY: test
test:
	go test -timeout 3m ./...

.PHONY: lint
lint:
	@golangci-lint run --config ../../.golangci.yml

.PHONY: gen-code
gen-code:
	grep -rl '// Code generated by codegen; DO NOT EDIT.' resources/services/* | xargs rm
	go run codegen/main.go

.PHONY: gen-docs
gen-docs:
	rm -rf ./docs/tables/*
	go run main.go doc ./docs/tables
	sed 's_(\(.*\))_(https://github.com/cloudquery/cloudquery/blob/main/plugins/source/snyk/docs/tables/\1)_' docs/tables/README.md > ../../../website/pages/docs/plugins/sources/snyk/tables.md

# All gen targets
.PHONY: gen
gen: gen-code gen-docs
