# Generate mocks for mock/unit testing 
.PHONY: generate-mocks
generate-mocks:
	go generate ./client/services/...

# Test unit
.PHONY: test
test:
	go test -timeout 3m ./...


.PHONY: gen-docs
gen-docs:
	rm -rf ./docs/tables/*
	go run main.go doc ./docs/tables
	sed 's_(\(.*\))_(https://github.com/cloudquery/cloudquery/blob/main/plugins/source/azure/docs/tables/\1)_' docs/tables/README.md > ../../../website/pages/docs/plugins/sources/azure/tables.md

.PHONY: lint
lint:
	golangci-lint run --config ../../.golangci.yml 

.PHONY: codegen0
codegen0:
	grep -rl '// Code generated by codegen0; DO NOT EDIT.' codegen1/recipes/* | xargs rm
	go run codegen0/main.go

.PHONY: codegen1
codegen1:
	grep -rl '// Code generated by codegen1; DO NOT EDIT.' codegen2/recipes/* | xargs rm
	go run codegen1/main.go

.PHONY: codegen2
codegen2:
	grep -rl '// Code generated by codegen2; DO NOT EDIT.' resources/* client/* | xargs rm
	go run codegen2/main.go

.PHONY: gen
gen: codegen2 gen-docs
	echo "Done"

.PHONY: pregen
pregen: codegen1 codegen2
	echo "Done"