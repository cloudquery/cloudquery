# Install tools
.PHONY: install-tools
install-tools:
	@echo Installing tools from tools/tool.go
	@cat tools/tool.go | grep _ | awk -F'"' '{print $$2}' | xargs -tI % go install %

# Install pre-commit hooks. This requires pre-commit to be installed (https://pre-commit.com/)
.PHONY: install-hooks
install-hooks:
	pre-commit install

# unit tests
.PHONY: test
test:
	go test -timeout 3m ./...

.PHONY: lint
lint:
	golangci-lint run --config ../../.golangci.yml

# Install gen tools
.PHONY: install-gen-tools
install-gen-tools:
	go install golang.org/x/tools/cmd/goimports@latest
	go install mvdan.cc/gofumpt@latest

# Generate clients
.PHONY: gen-clients
gen-clients: install-gen-tools
	grep -rl '// Code generated by codegen; DO NOT EDIT.' client/services/* | xargs rm
	go run codegen/cmd/clients/main.go

# Generate mocks for mock/unit testing
.PHONY: gen-mocks
gen-mocks: install-tools gen-clients
	rm -rf ./client/mocks/*
	go generate ./client/services/...

.PHONY: gen-resources
gen-resources: install-gen-tools
	grep -rl '// Code generated by codegen; DO NOT EDIT.' resources/services/* | xargs rm
	go run codegen/cmd/resources/main.go

# Generate docs
.PHONY: gen-docs
gen-docs:
	rm -rf ./docs/tables/*
	go run main.go doc ./docs/tables


# All main gen targets
.PHONY: gen
gen: gen-resources gen-docs
